# Template file for 'nwg-shell-wallpapers'
pkgname=nwg-shell-wallpapers
version=${VERSION}
revision=1
short_desc="Selection of wallpapers contributed to the nwg-shell project"
maintainer="zenobit <zenobit@disroot.org>"
license="CC0-1.0"
homepage="https://github.com/nwg-piotr/nwg-shell-wallpapers"
#changelog=""
distfiles="https://github.com/nwg-piotr/nwg-shell-wallpapers/archive/refs/tags/v${version}.tar.gz"
checksum=${SHA256}

do_install() {
	./install.sh
}

post_install() {
	for f in wallpapers/*; do
		vinstall "$f" 644 usr/share/backgrounds/nwg-shell
	done
	vinstall logo.svg 644 usr/share/icons nwg-shell.svg
	vdoc README.md
}
